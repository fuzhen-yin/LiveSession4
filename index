			var mymap = L.map('mapdiv').setView([48.8566, 2.3522], 12.2);
			L.tileLayer('http://tile.stamen.com/terrain/{z}/{x}/{y}.png', {
				maxZoom: 20,
				attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a>'
				}).addTo(mymap);
			L.marker([48.8566, 2.3522]).addTo(mymap).bindPopup("<b>Hi, there is Paris!</b><br/>Welcome").openPopup();
